#!/usr/bin/bash

mesg="Uptime: `uptime -p | sed -e 's/up //g'`"

shutdown='Shutdown'
reboot='Reboot'
lock='Lock'
suspend='Suspend'
logout='Logout'
hibernate="Hibernate"

get_choice() {
    if [ -f /usr/bin/rofi ]; then
        list_col='6'
        list_row='1'
        echo -e "$lock\n$logout\n$reboot\n$shutdown\n$suspend\n$hibernate" | \
            rofi \
                -dmenu \
                -mesg "$mesg" \
                -i \
                -theme-str "
                    configuration {
                        show-icons: false;
                    }
                    window {
                        width: 800px;
                    }
                    listview {
                        columns: $list_col;
                        lines: $list_row;
                        scrollbar: false;
                    }
                    inputbar {
                        enabled: false;
                    }
                    element-text {
                        horizontal-align: 0.5;
                    }"
    elif [ -f /usr/bin/dmenu ]; then
        echo -e "$lock\n$logout\n$reboot\n$shutdown\n$suspend\n$hibernate" | \
            dmenu \
                -i \
                -p "$mesg" \
                -fn 'monospace-14' \
                -nf '#c5c8c6' \
                -nb '#1d1f21' \
                -sf '#c5c8c6' \
                -sb '#373B41'
    else
        exit 0
    fi
}

choice="$(get_choice)"

case ${choice} in
    $lock)
        loginctl lock-session
        ;;
    $logout)
        loginctl kill-session ''
        ;;
    $reboot)
        /usr/bin/systemctl reboot
        ;;
    $shutdown)
        /usr/bin/systemctl poweroff
        ;;
    $suspend)
        /usr/bin/systemctl suspend
        ;;
    $hibernate)
        /usr/bin/systemctl hibernate
        ;;
esac
