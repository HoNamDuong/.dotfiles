#!/usr/bin/bash

launchers() {
    if [ -f /usr/bin/rofi ]; then
        # rofi 
        theme="$HOME/.config/rofi/themes/launchers.rasi"
        case $1 in
        "window")
            rofi \
                -show window \
                -kb-cancel "Alt+Escape,Escape" \
                -kb-accept-entry "!Alt-Tab,!Alt+Alt_L,Return" \
                -kb-row-down "Alt+Tab,Alt+Down" \
                -kb-row-up "Alt+ISO_Left_Tab,Alt+Up" \
                -selected-row 1 \
                -theme-str 'mainbox { children: ["listview"];}  listview { lines: 5;}' \
                -theme "$theme" 
            ;;
        "run")
            rofi \
                -show run \
                -theme-str 'listview {lines: 5;} window { width: 600px; } entry { placeholder: "Command..."; }' \
                -theme "$theme" 
            ;;
        *)
            rofi \
                -show drun \
                -theme "$theme"
            ;;
        esac

    elif [ -f /usr/bin/dmenu ]; then
        # dmenu
        case $1 in
        "window")
            exit 0
            ;;
        "run")
            dmenu_run \
                -i \
                -p "Command" \
                -fn 'monospace-12' \
                -nf '#c8d3f5' \
                -nb '#1a1b26' \
                -sf '#c8d3f5' \
                -sb '#3b4261'
            ;;
        *)
            i3-dmenu-desktop \
                --dmenu="dmenu \
                    -i \
                    -p 'Applications' \
                    -fn 'monospace-12' \
                    -nf '#c8d3f5' \
                    -nb '#1a1b26' \
                    -sb '#3b4261' \
                    -sf '#c8d3f5' \
                    "
            ;;
        esac
    else 
        exit 0
    fi
}

launchers "$1"
