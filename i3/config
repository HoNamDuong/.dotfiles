# Exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# # Manage i3 session
# bindsym $mod+Shift+e exec --no-startup-id i3-nagbar -t warning -f "pango:Hack 9" -m "Do you really want to exit?" -B "    Exit " "i3-msg exit" -B "    Lock " "pkill i3-nagbar && i3lock-fancy -f Source-Sans-Pro" -B "    Reboot " "pkill i3-nagbar && reboot" -B "    Shutdown " "pkill i3-nagbar && shutdown -h now"

# Shortcut applications
# Screenshot
bindsym --release Print exec --no-startup-id gnome-screenshot
bindsym --release $mod+Print exec --no-startup-id gnome-screenshot -a
bindsym --release Ctrl+Print exec --no-startup-id gnome-screenshot -w
# Open terminal
bindsym $mod+Return split h exec --no-startup-id i3-sensible-terminal
bindsym $mod+Shift+Return split v exec --no-startup-id i3-sensible-terminal
# Control
bindsym $mod+i exec gnome-control-center 
# Search applications
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -i -fn 'JetBrainsMono NF-12' -nb '#1a1b26' -sb '#3b4261' -sf '#c8d3f5'"
# Search command
bindsym $mod+Shift+d exec --no-startup-id dmenu_run -fn 'JetBrainsMono NF-12' -nf '#c8d3f5' -nb '#1a1b26' -sf '#c8d3f5' -sb '#3b4261'  

# Search applications
bindsym $mod+p exec --no-startup-id rofi -show drun -show-icons
# Search command
bindsym $mod+Shift+p exec --no-startup-id rofi -show run
# bindsym $mod+d exec --no-startup-id rofi -show drun

# Switching window with Alt+Tab 
bindsym Mod1+Tab exec --no-startup-id rofi -show window -show-icons

# Build menu power with rofi
bindsym $mod+F4 exec ~/.config/i3/bin/power

# Rename workspace with i3-input using numbers and text
bindsym $mod+n exec i3-input -F 'rename workspace to "%s"' -P 'New name for this workspace: '

# Resize window (you can also use the mouse for that)
mode "RESIZE" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.

    bindsym $left   resize shrink width 10 px or 10 ppt
    bindsym $down   resize grow height 10 px or 10 ppt
    bindsym $up     resize shrink height 10 px or 10 ppt
    bindsym $right  resize grow width 10 px or 10 ppt

    bindsym Left    resize shrink width 10 px or 10 ppt
    bindsym Down    resize grow height 10 px or 10 ppt
    bindsym Up      resize shrink height 10 px or 10 ppt
    bindsym Right   resize grow width 10 px or 10 ppt

    # Back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "RESIZE"

# Shutdown, Reboot, Lock Screen, and Logout hibernate suspend
mode "POWER" {
    bindsym l exec --no-startup-id i3lock --no-unlock-indicator --pointer=default --color "000000", mode "default"
    bindsym q exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec systemctl reboot 
    bindsym p exec systemctl poweroff
    bindsym s exec sudo systemctl suspend
    bindsym h exec sudo systemctl hibernate 

    # Back to normal: Enter or Escape or $mod+Shift+q 
    bindsym Return          mode "default"
    bindsym Escape          mode "default"
    bindsym $mod+Shift+q    mode "default"
}
bindsym $mod+Shift+q mode "POWER"

# Define names for workspaces
set $ws1  "1:   Terminal "
set $ws2  "2:   Code "
set $ws3  "3:   Chromium "
set $ws4  "4:   Files "
set $ws5  "5:   Documents "
set $ws6  "6:   Media "
set $ws7  "7:   Design "
set $ws8  "8:   Chat "
set $ws9  "9:   General "
set $ws10 "0:   Settings "

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move to workspace with focused container
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10; workspace $ws10

# Start applications on specific workspaces
assign [class="Code"] $ws2
assign [title="Google Dich"] $ws3
assign [class="Nautilus"] $ws4
assign [class="vlc"] $ws6
assign [class="discord"] $ws8
assign [class="Telegram"] $ws8
assign [class="Gnome-control-center"] $ws10

# Assign to certain workspace
assign [window_role="browser"] $ws3

# Switch to workspace with urgent window automatically
for_window [urgent="latest"] focus
# set specific windows to floating mode
for_window [window_role="app"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [class="feh"] floating enable, resize set 800 450, move position center  
for_window [class="Gnome-(calendar|calculator|power-statistics)"] floating enable focus
for_window [class="conky"] border pixel 0 



# BAR AND COLOR BAR

bar {
    status_command i3status 
    # status_command i3status | python3 ~/.config/i3status/microphone.py 
    separator_symbol " " 
    workspace_buttons       yes
    strip_workspace_numbers yes

    # Disabling mouse scroll workspace switching on bar 
    bindsym button4         nop
    bindsym button5         nop

    # mode dock
    position top
    colors {
        # Whole color settings
        background #1a1b26 
        statusline #c8d3f5 
        separator  #c8d3f5 

        # type             border  background font
        focused_workspace  #3b4261 #3b4261 #c8d3f5 
        active_workspace   #1a1b26 #1a1b26 #c8d3f5 
        inactive_workspace #1a1b26 #1a1b26 #c8d3f5 
        urgent_workspace   #ff757f #ff757f #1a1b26 
        binding_mode       #c8d3f5 #c8d3f5 #1a1b26 
    }
}

exec --no-startup-id sh -c 'sleep 1; i3-msg "workspace $ws9"'
