# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    colors = true
    interval = 5
    markup = pango
    color_good = "#9ece6a"
    color_degraded = "#e0af68"
    color_bad = "#ff757f"
    separator = false
}

