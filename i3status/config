# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    colors = true
    interval = 2
    markup = pango
    color_good = "#9ece6a"
    color_degraded = "#e0af68"
    color_bad = "#ff757f"
    separator = false
}

order += "run_watch DHCP"
order += "run_watch VPN"
order += "volume master"
order += "cpu_usage"
order += "memory"
order += "tztime local"


run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
    format_down = ""
}

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
    format_down = ""
}

cpu_usage {
    format = "<span foreground='#bb9af7'>CPU</span> %usage"
    max_threshold = 80
    degraded_threshold = 50
}

memory {
    # format = "RAM  %free %available (%used) / %total"
    format = "<span foreground='#1abc9c'>RAM</span> %percentage_used"
    threshold_degraded = 50%
    threshold_critical = 20%
}

volume master {
    format = "<span foreground='#7aa2f7'> </span>%volume"
    format_muted = "婢 %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "%A %d/%m/%Y %H:%M "
}
