cpu_usage {
    format = "<span foreground='#bb9af7'>CPU</span> %usage"
    max_threshold = 80
    degraded_threshold = 50
}

memory {
    # format = "RAM  %free %available (%used) / %total"
    format = "<span foreground='#1abc9c'>RAM</span> %percentage_used"
    threshold_degraded = 50%
    threshold_critical = 20%
}

tztime localdate {
    format = "  %Y-%m-%d"
}

tztime localtime {
    format = "  %H:%M"
}

