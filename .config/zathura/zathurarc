# Hybrid theme
set notification-error-bg       "#cc6666"
set notification-error-fg       "#1d1f21"
set notification-warning-bg     "#f0c674"
set notification-warning-fg     "#1d1f21"
set notification-bg             "#c5c8c6"
set notification-fg             "#1d1f21"
set completion-bg               "#373B41"
set completion-fg               "#eaeaea"
set completion-group-bg         "#373B41"
set completion-group-fg         "#eaeaea"
set completion-highlight-bg     "#81a2be"
set completion-highlight-fg     "#1d1f21"
set index-bg                    "#373B41"
set index-fg                    "#eaeaea"
set index-active-bg             "#81a2be"
set index-active-fg             "#1d1f21"
set inputbar-bg                 "#1d1f21"
set inputbar-fg                 "#eaeaea"
set statusbar-bg                "#373B41"
set statusbar-fg                "#eaeaea"
set highlight-color             "#f0c674"
set highlight-active-color      "#cc6666"
set default-bg                  "#1d1f21"
set default-fg                  "#eaeaea"
set recolor-lightcolor          "#1d1f21"
set recolor-darkcolor           "#eaeaea"

# Font
set font                        "monospace normal 14"

# Enables recoloring
set recolor                     "true"
set recolor-keephue             "true"
set recolor-reverse-video       "true"

# Enable copy to clipboard
set selection-clipboard         "clipboard"

# Keyring
map <M-z> set recolor
