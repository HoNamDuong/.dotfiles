# i3status configuration file.

general {
    output_format = "i3bar"
    colors = true
    interval = 2
    markup = pango
    color_good = "#9ece6a"
    color_degraded = "#e0af68"
    color_bad = "#ff757f"
    separator = false
}

order += "volume master"
order += "cpu_usage"
order += "memory"
order += "tztime local"

cpu_usage {
    format = "<span foreground='#bb9af7'>CPU</span> %usage"
    max_threshold = 80
    degraded_threshold = 50
}

memory {
    format = "<span foreground='#1abc9c'>RAM</span> %percentage_used"
    threshold_degraded = 30%
    threshold_critical = 10%
}

volume master {
    format = "<span foreground='#7aa2f7'> </span>%volume"
    format_muted = "婢 muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "%A %d/%m/%Y %H:%M "
}
